<div id="remove_team_modal" class="modal">
    <div class="modal-content">
        <div class="row">
            <%= form_tag("teams/0", :method => :delete, class: "col s12 remove_team_form") do %>
                <div class="row">
                    <div class="col s12">
                        <h4>Remover time</h4>
                        <p>Tem certeza que deseja remover time?</p>
                    </div>
                    <div class="input-field col s12">
                        <%= submit_tag("Remover", class: "btn red right") %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>